<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/default_user"
            android:id="@+id/image_child_user"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            android:id="@+id/text_child_user"
            android:layout_weight="1"
            android:text="Jane"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/status_green"
            android:id="@+id/image_demo_green"
            android:layout_weight="0.7" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/status_yellow"
            android:id="@+id/image_demo_yellow"
            android:layout_weight="0.7" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/status_red"
            android:id="@+id/image_demo_red"
            android:layout_weight="0.7" />

    </LinearLayout>
</LinearLayout>